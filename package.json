{
  "name": "homey-homekit-bridge",
  "version": "1.1.6",
  "main": "build/app.js",
  "scripts": {
    "clean": "rm -rf build/@types build/drivers build/enums build/test build/app.js build/package*.json",
    "prepare": "npx husky install && npx patch-package",
    "homey-validate": "npx homey app validate -p build -l publish",
    "homey-publish": "npx homey app publish -p build",
    "build": "npx tsc --build tsconfig.prod.json",
    "dist": "npm run clean && npm run build && rm -rf build/@types build/test && cp package-lock.json build/ && jq 'del(.scripts) | del(.devDependencies)' package.json > build/package.json && npm ci --production --prefix build && npm run homey-publish",
    "test": "TEST=1 tape --unhandled-rejections=strict --enable-source-maps build/test/integration/*tests.js"
  },
  "engines": {
    "node": ">=12.16.1"
  },
  "devDependencies": {
    "@commitlint/cli": "15.0.0",
    "@commitlint/config-conventional": "15.0.0",
    "@types/debug": "4.1.7",
    "@types/homey": "npm:homey-apps-sdk-v3-types@0.2.2",
    "@types/node": "17.0.2",
    "@types/sinon": "10.0.6",
    "@types/tape": "4.13.2",
    "@typescript-eslint/eslint-plugin": "5.8.0",
    "@typescript-eslint/parser": "5.8.0",
    "changelog-parser": "2.8.0",
    "eslint": "8.5.0",
    "eslint-plugin-sort-imports-es6-autofix": "0.6.0",
    "homey": "2.23.7",
    "husky": "7.0.4",
    "patch-package": "6.4.7",
    "sinon": "12.0.1",
    "standard-version": "9.3.2",
    "strict-event-emitter-types": "2.0.0",
    "tape": "5.3.2",
    "ts-mock-imports": "1.3.8",
    "typescript": "4.5.4"
  },
  "dependencies": {
    "athom-api": "^3.7.1",
    "debug": "^4.3.3",
    "hap-nodejs": "^0.9.7"
  }
}
